<%- include("../layout/boilerplate") %>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse" id="sidebarMenu">
            <div class="position-sticky pt-3">
                <div class="text-center mb-4">
                    <img src="https://via.placeholder.com/80" class="rounded-circle" alt="Profile">
                    <h5 class="mt-2"><%= currentUser.name %></h5>
                    <p class="text-muted">Farmer</p>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="/farmer/dashboard">
                            <i class="bi bi-house-door me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/inventory/add">
                            <i class="bi bi-plus-circle me-2"></i>
                            Add Inventory
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/inventory/view">
                            <i class="bi bi-list-ul me-2"></i>
                            My Inventory
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/orders/farmer">
                            <i class="bi bi-bag-check me-2"></i>
                            My Orders
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/chatbot">
                            <i class="bi bi-chat-dots me-2"></i>
                            Crop Assistant
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/market-prices">
                            <i class="bi bi-graph-up me-2"></i>
                            Market Prices
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/crop-prediction">
                            <i class="bi bi-bar-chart me-2"></i>
                            Crop Prediction
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">
                            <i class="bi bi-person me-2"></i>
                            My Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">
                            <i class="bi bi-box-arrow-right me-2"></i>
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Farmer Dashboard</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <button type="button" class="btn btn-sm btn-outline-success me-2" id="refreshData">
                        <i class="bi bi-arrow-repeat"></i> Refresh
                    </button>
                    <a href="/chatbot" class="btn btn-sm btn-success">
                        <i class="bi bi-chat-dots"></i> Ask Crop Assistant
                    </a>
                </div>
            </div>

            <!-- Flash messages -->
            <% if(success && success.length) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>
            <% if(error && error.length) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>

            <!-- Quick Stats -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card text-white bg-primary">
                        <div class="card-body">
                            <h5 class="card-title">Total Inventory</h5>
                            <h2 class="card-text" id="totalInventory">0</h2>
                            <p class="card-text">Items in stock</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-success">
                        <div class="card-body">
                            <h5 class="card-title">Total Sales</h5>
                            <h2 class="card-text" id="totalSales">₹0</h2>
                            <p class="card-text">Revenue earned</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-info">
                        <div class="card-body">
                            <h5 class="card-title">Pending Orders</h5>
                            <h2 class="card-text" id="pendingOrders">0</h2>
                            <p class="card-text">To be fulfilled</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-warning">
                        <div class="card-body">
                            <h5 class="card-title">Market Trends</h5>
                            <h2 class="card-text" id="marketTrend">↑</h2>
                            <p class="card-text">Price movement</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity and Market Prices -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Recent Activity</h5>
                        </div>
                        <div class="card-body">
                            <div class="list-group" id="recentActivity">
                                <div class="text-center py-3">
                                    <div class="spinner-border text-success" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Today's Market Prices</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Crop</th>
                                            <th>Price (₹/kg)</th>
                                            <th>Trend</th>
                                        </tr>
                                    </thead>
                                    <tbody id="marketPrices">
                                        <tr>
                                            <td colspan="3" class="text-center">
                                                <div class="spinner-border text-success" role="status">
                                                    <span class="visually-hidden">Loading...</span>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Crop Recommendations -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Recommended Crops for Your Region</h5>
                </div>
                <div class="card-body">
                    <div class="row" id="cropRecommendations">
                        <div class="text-center py-3">
                            <div class="spinner-border text-success" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Add Bootstrap Icons CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

<style>
    .sidebar {
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        z-index: 100;
        padding: 48px 0 0;
        box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
    }
    
    .sidebar .nav-link {
        font-weight: 500;
        color: #333;
        padding: 0.5rem 1rem;
        margin: 0.2rem 0;
        border-radius: 0.25rem;
    }
    
    .sidebar .nav-link:hover {
        background-color: rgba(0, 128, 0, 0.1);
    }
    
    .sidebar .nav-link.active {
        color: #fff;
        background-color: #198754;
    }
    
    .sidebar .nav-link i {
        margin-right: 4px;
        color: #727272;
    }
    
    .sidebar .nav-link.active i {
        color: #fff;
    }
    
    @media (max-width: 767.98px) {
        .sidebar {
            top: 5rem;
        }
    }
    
    .crop-card {
        transition: transform 0.3s;
    }
    
    .crop-card:hover {
        transform: translateY(-5px);
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Highlight active nav item
        const currentPath = window.location.pathname;
        document.querySelectorAll('.sidebar .nav-link').forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active');
            } else {
                link.classList.remove('active');
            }
        });
        
        // Load dashboard data
        loadDashboardData();
        
        // Refresh button
        document.getElementById('refreshData').addEventListener('click', function() {
            loadDashboardData();
        });
    });
    
    async function loadDashboardData() {
        try {
            // In a real implementation, these would be separate API calls
            // For demo purposes, we'll simulate the data
            
            // Load inventory stats
            const inventoryStats = {
                totalItems: Math.floor(Math.random() * 50) + 10,
                totalSales: Math.floor(Math.random() * 50000) + 10000,
                pendingOrders: Math.floor(Math.random() * 10) + 1
            };
            
            document.getElementById('totalInventory').textContent = inventoryStats.totalItems;
            document.getElementById('totalSales').textContent = '₹' + inventoryStats.totalSales.toLocaleString();
            document.getElementById('pendingOrders').textContent = inventoryStats.pendingOrders;
            document.getElementById('marketTrend').textContent = Math.random() > 0.5 ? '↑' : '↓';
            
            // Load recent activity
            const activities = [
                { type: 'sale', message: 'Sold 50kg of Rice to Buyer123', time: '2 hours ago' },
                { type: 'inventory', message: 'Added 100kg of Wheat to inventory', time: '1 day ago' },
                { type: 'price', message: 'Price alert: Tomato prices increased by 5%', time: '2 days ago' },
                { type: 'order', message: 'New order received from Buyer456', time: '3 days ago' }
            ];
            
            const activityHTML = activities.map(activity => {
                let icon = '';
                switch(activity.type) {
                    case 'sale': icon = '<i class="bi bi-cart-check text-success"></i>'; break;
                    case 'inventory': icon = '<i class="bi bi-box text-primary"></i>'; break;
                    case 'price': icon = '<i class="bi bi-graph-up text-warning"></i>'; break;
                    case 'order': icon = '<i class="bi bi-bag text-info"></i>'; break;
                }
                
                return `
                <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1">${icon} ${activity.message}</h6>
                        <small class="text-muted">${activity.time}</small>
                    </div>
                </a>`;
            }).join('');
            
            document.getElementById('recentActivity').innerHTML = activityHTML;
            
            // Load market prices
            const prices = [
                { crop: 'Rice', price: 2500, trend: 'up' },
                { crop: 'Wheat', price: 2200, trend: 'down' },
                { crop: 'Tomato', price: 3500, trend: 'up' },
                { crop: 'Potato', price: 1800, trend: 'down' },
                { crop: 'Onion', price: 2800, trend: 'up' }
            ];
            
            const pricesHTML = prices.map(price => {
                const trendIcon = price.trend === 'up' 
                    ? '<i class="bi bi-arrow-up-circle-fill text-success"></i>' 
                    : '<i class="bi bi-arrow-down-circle-fill text-danger"></i>';
                
                return `
                <tr>
                    <td>${price.crop}</td>
                    <td>₹${price.price}</td>
                    <td>${trendIcon}</td>
                </tr>`;
            }).join('');
            
            document.getElementById('marketPrices').innerHTML = pricesHTML;
            
            // Load crop recommendations
            const recommendations = [
                { crop: 'Rice', confidence: 'High', season: 'Kharif', image: 'https://via.placeholder.com/100' },
                { crop: 'Wheat', confidence: 'Medium', season: 'Rabi', image: 'https://via.placeholder.com/100' },
                { crop: 'Corn', confidence: 'High', season: 'Kharif', image: 'https://via.placeholder.com/100' },
                { crop: 'Soybean', confidence: 'Medium', season: 'Kharif', image: 'https://via.placeholder.com/100' }
            ];
            
            const recommendationsHTML = recommendations.map(crop => {
                const confidenceClass = crop.confidence === 'High' ? 'text-success' : 'text-warning';
                
                return `
                <div class="col-md-3 mb-3">
                    <div class="card crop-card h-100">
                        <img src="${crop.image}" class="card-img-top" alt="${crop.crop}">
                        <div class="card-body">
                            <h5 class="card-title">${crop.crop}</h5>
                            <p class="card-text">
                                <span class="badge bg-light text-dark">${crop.season} Season</span>
                                <span class="badge ${confidenceClass === 'text-success' ? 'bg-success' : 'bg-warning'} text-white">${crop.confidence} Confidence</span>
                            </p>
                            <a href="/crop-details/${crop.crop.toLowerCase()}" class="btn btn-sm btn-outline-success">View Details</a>
                        </div>
                    </div>
                </div>`;
            }).join('');
            
            document.getElementById('cropRecommendations').innerHTML = recommendationsHTML;
            
        } catch (error) {
            console.error('Error loading dashboard data:', error);
            alert('Failed to load dashboard data. Please try again later.');
        }
    }
</script>

